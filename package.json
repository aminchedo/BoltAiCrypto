{
  "name": "hts-trading-system",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "frontend:dev": "vite --port 5173",
    "frontend:build": "vite build",
    "frontend:build:check": "tsc -b && vite build",
    "frontend:preview": "vite preview --port 5173",
    "backend:dev": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev": "concurrently -k -n WEB,API -c auto \"npm:frontend:dev\" \"npm:backend:dev\"",
    "build": "npm run frontend:build",
    "preview": "npm run frontend:preview",
    "check:types": "tsc --noEmit",
    "check:links": "tsx scripts/check-links.ts",
    "check:all": "npm run check:types && npm run check:links"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.462.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "glob": "^11.0.3",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vite": "^5.4.8"
  }
}
